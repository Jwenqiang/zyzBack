/**app.wxss**/
@import "/font/iconfont.wxss";
page,.page{width: 100%;min-height: 100%;font-size: 28rpx;color: #333;background: #fff;box-sizing: border-box;position: relative;}
.hidden{overflow: hidden;height: 100%}
.outer { zoom:1; } /*为了兼容性，因为ie6/7不能使用伪类，所以加上此行代码。*/
.outer:after { clear:both;content:'.';display:block;width:0;height:0;visibility:hidden; }
.red{color: #ff0000;margin: 0 4rpx}
.h1{font-size: 46rpx;color: #000;font-weight: bold}
.h2{font-size: 40rpx;color: #000;font-weight: bold}
.h3{font-size: 36rpx;color: #000;font-weight: bold}
.h3{font-size: 32rpx;color: #000;font-weight: bold}
.mt80{margin-top: -80rpx !important;}
.htop{width: 100%;height: 132rpx;}
image{height: 100%;width: 100%}
.hr20{height: 20rpx;width: 100%;background: #f5f5f7}
.hr110{height: 340rpx;width: 100%;}
.line{height: 2rpx;width: 100%;background: #dedede;clear: both}
.inputTip{font-weight:400;color:#ccc;}
.fl{float: left}
.fr{float: right}
/* 弹窗 */
.show{position: fixed;top: 0;left: 0;width: 100%;height: 100%;z-index: 9995;transition: all 1s ease}
.bj{width: 100%;height: 100%;background: #000;opacity: 0.5;z-index: 9996}
.showMsg{position: fixed;top: 20%;left: 80rpx;height: 500rpx;width: 590rpx;background: #fff;z-index: 9997;border-radius: 30rpx;box-sizing: border-box;padding: 80rpx 60rpx 40rpx}
.showBtn{margin-top: 80rpx;width: 100%;}
.showBtn button{border: none;width: 200rpx;display: inline-block;float: left;height: 80rpx;line-height: 80rpx;font-size: 32rpx;background: #fe483a;color: #fff;border-radius: 20px}
.mstip{line-height: 60rpx}
.showBtn button:last-child{float: right;background: #999}