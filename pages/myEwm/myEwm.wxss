@import "/font/iconfont.wxss";
.page{font-size:28rpx;text-align: center}
.tip{margin: 80rpx 0}
.tip text{color: #000;display: block;margin-bottom: 20rpx;font-size:40rpx;font-weight:bold}
.upload ,.upload label{position: relative; display: inline-block;width: 280rpx;height: 280rpx;background:#ededed;text-align: center;border-radius: 2px;font-size: 40rpx}
.upload .add text{font-weight: bolder;font-size: 80rpx;line-height: 1}
.add{margin-top: 80rpx;font-size: 32rpx;color: #999}
.upload image{width: 100%; height: 280rpx}
.upload .iconfont{position: absolute;right: 0rpx;top: 0rpx;width: 28rpx;height: 28rpx;line-height: 1;font-size: 28rpx;z-index: 9;color: #000}

.btn{width: 100%;padding: 0 40rpx;box-sizing: border-box;margin-top: 120rpx}
.btn button{background: #5c85ff;color: #fff}