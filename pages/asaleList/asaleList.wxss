@import "../active/active.wxss";
.page{height: 100vh;background: #fff}
.asl-top{height: 328rpx;}
.asl-top image{height: 328rpx;width: 100%}
.asl-content{padding: 52rpx 0 60rpx 52rpx;box-sizing: border-box}
.asl-title{font-size: 44rpx;font-weight: bold}
.asl-li{width: 660rpx;height: 224rpx;margin-bottom: 20rpx;position: relative;padding: 42rpx 0;box-sizing: border-box}
.asl-l{width: 202rpx;height: 100%;box-sizing: border-box;text-align: center;float: left}
image.asl-zj{width: 108rpx;height: 70rpx}
image.asl-z{width: 62rpx;height: 71rpx;vertical-align: -20rpx}
.asl-lp{font-size: 58rpx;color: #fff;font-weight: bold;display: inline-block;line-height: 1;margin-right: 4rpx}
.asl-m{width: 238rpx;float: left;text-align: center;color: #fff;height: 100%;position: relative}
.asl-mt{font-size: 28rpx;font-weight: bold;margin-bottom: 10rpx;position: relative;text-decoration: underline}
.asl-adr{font-size: 22rpx;color: #f5f5f7}
.asl-adr text{font-size: 20rpx;margin-left: 4rpx}
.asl-tip{
  width: 100%;
  text-align: center;
  position:absolute;
  bottom:0;
}
.asl-r{width: 100rpx;height: 100rpx;float: left;text-align: center;font-size: 38rpx;margin: 18rpx 0 0 46rpx;box-sizing: border-box;color: #ff3836;font-weight: bold}
.asl-r button{padding: 0;background: none;width: 100%;height: 100%;white-space: normal;display: inline-block;line-height: 1.4;color: #ff3836;font-size: 38rpx;font-weight: bold}
