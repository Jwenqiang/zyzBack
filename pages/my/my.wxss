.page{background: #f3f4f8;}
.top{height: 320rpx;padding: 40rpx 40rpx 34rpx;color: #fff;box-sizing: border-box;}
image.mbj{width: 100%;height: 320rpx;position: absolute;left: 0;top: 0;z-index: 1}
.msg{position: relative;z-index: 2}
.topA,.topB{z-index: 2}
.top .tx{width: 120rpx;height: 120rpx;display: block;float: left;border-radius: 50%;overflow: hidden;margin-right: 24rpx}
.name{
  width: 300rpx;
  float: left;
  font-size: 24rpx;
  position: relative
}
.name image.rz{width: 42rpx;height: 36rpx;margin-left: 10rpx}
.name label{display: block;margin-bottom: 20rpx;font-size: 40rpx;font-weight: bold;}
.name label.nick{display: inline-block;max-width: 200rpx;white-space: nowrap;overflow: hidden;text-overflow: ellipsis}
.edit,button.edit{float: right;line-height: 120rpx;font-size: 28rpx}
.edit .iconfont,button.edit.iconfont{font-size: 44rpx;position: relative; top: 6rpx;color: #fff}
button.edit{background: none;padding: 0;color: #fff}
button.edit::after{border: 0}
button.editP{line-height: 40rpx;height: 40rpx; top: 0;float: none;text-align: left;color: #f8f5ce;}
.topB{height: 84rpx;line-height: 84rpx;width: 100%;background: #f8f5ce;margin-top: 40rpx;border-radius: 10rpx;padding: 0 20rpx;box-sizing: border-box;color: #666}
.topB image.rz{width: 42rpx;height: 36rpx;position: relative; top: 8rpx;margin-right: 20rpx}
.mtip{font-weight: bold;color: #000}
.goTq{float: right;font-size: 20rpx;background: none;border: 0;line-height: 84rpx;padding: 0;color: #999}
.goTq text{font-size: 20rpx;margin-left: 20rpx;}
button.goTq::after{border: 0}

.ul{margin-top: 20rpx;padding: 0 40rpx;background: #fff}
.li{box-sizing: border-box; display: block;width: 100%;height: 100rpx;line-height: 100rpx;color: #203140;font-size: 30rpx;font-weight: bold;}
.li text{float: right;font-weight: 400;color: #666}
.li text.iconfont{font-size: 28rpx;margin-left: 20rpx;color: #999}
.li switch{float: right}
button.li{text-align: left;padding: 0;background: #fff}
button.li::after{border: 0}
.login{background: none;color: #fff;height: 60rpx;line-height: 60rpx; width: 140rpx;margin: 0;font-size: 28rpx;margin-top: 30rpx;border: 1px solid #fff;
}
.showMsg{padding-top: 60rpx;top: 25%}
.mstip{text-align: center;font-size: 30rpx}

